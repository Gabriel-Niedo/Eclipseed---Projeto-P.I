    <input type="text" id="input_nome" placeholder="Nome">
    <input type="text" id="input_email" placeholder="E-mail">
    <input type="text" id="input_telefone" placeholder="Telefone">
    <br>
    <input type="text" id="input_cnpj" placeholder="CNPJ">
    <input type="text" id="input_hectares" placeholder="Hectares">
    <input type="text" id="input_faturamento" placeholder="Faturamento">
