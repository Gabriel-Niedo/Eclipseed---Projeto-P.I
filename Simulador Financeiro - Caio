<script>
    var sensores = 100;
    function solicitar() {
        var nome = input_nome.value;
        var email = input_email.value;
        var telefone = input_email.value;
        var cnpj = input_cnpj.value;
        var hectares = Number(input_hectares.value);
        var faturamento = Number(input_faturamento.value);
        var qtdSensores = hectares / 10 // POR HECTARE SERÃO 10 SENSORES
        var custo = sensores * qtdSensores;
        var lucro = faturamento + (faturamento * 0.10);

        div_mensagem.innerHTML = `Nome: ${nome}    E-mail: ${email}    Telefone: ${telefone}<br>
        CNPJ: ${cnpj}    Hectares: ${hectares}    Faturamento Total: ${faturamento}<br>
        Seria necessário instalar ${qtdSensores} de nossos sensores na sua plantação, isso geraria um lucro adicional de aproximadamente: <b style='color: green'>R$ ${lucro}</b>,
        e gastaria no total R$ ${custo} com nossos sensores. <b><u>Tem interesse? Contate-nos através do nosso e-mail!</u></b>`
    }
</script>
